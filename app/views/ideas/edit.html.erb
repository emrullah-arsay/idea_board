<h5 style="color:red"><%= @idea.errors.full_messages.join(", ")%></h5>
<% end -%>


<form action="<%=idea_path(@idea)%>" method="post" class="form"	role="form" >
	<input type="hidden" name="_method" value="put">
	
	<%= render "form" %>

</form>