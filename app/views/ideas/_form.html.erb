<div class="form-group">
<%= form_for @idea do |f| -%>
	
	<%= f.label :title %>
	<%= f.text_field :title , placeholder: 'title',	class:'form-control' %> <br>
	<%= f.label :description %>
	<%= f.text_area :description , placeholder: 'description',class:'form-control'	,rows:'7'  %> <br>
		<%= f.label :planned_to %>
	<%= f.date_select :planned_to , placeholder: 'mm.dd.yyyy',class:'form-control'	 %> <br>

	<%= f.label :category_id %>
	<%= f.select :category_id ,@categories,class:'form-control'	 %> <br>


	<%= f.submit 'Send' ,class:'btn btn-default' %>

<% end -%>
</div>








                                       
                               













                                             
                                                                               